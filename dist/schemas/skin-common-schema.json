{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "Selector": {
      "type": "object",
      "properties": {
        "namespace": {
          "type": "string"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "attributes": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false,
      "additionalItems": false
    },
    "ContentKey": {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "ns": {
              "type": "string",
              "pattern": "[\\w-]+"
            },
            "key": {
              "type": "string",
              "pattern": "[\\w-\\[\\]]+"
            }
          },
          "required": [
            "key"
          ],
          "additionalProperties": false
        },
        {
          "type": "string"
        }
      ]
    }
  }
}