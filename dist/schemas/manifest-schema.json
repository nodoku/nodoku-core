{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "namespace": {
      "type": "string"
    },
    "components": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "schemaFile": {
            "type": "string"
          },
          "implementation": {
            "type": "string"
          },
          "numBlocks": {
            "oneOf": [
              {
                "type": "string",
                "enum": [
                  "unlimited"
                ]
              },
              {
                "type": "number"
              }
            ]
          }
        },
        "required": [
          "schemaFile",
          "implementation",
          "numBlocks"
        ],
        "additionalProperties": false
      }
    }
  },
  "required": [
    "components"
  ],
  "additionalProperties": false
}