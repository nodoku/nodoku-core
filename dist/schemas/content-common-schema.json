{
  "description": "Landing buddy content page schema",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "Link": {
      "type": "string",
      "pattern": "^((http|https)?:\\/\\/)?\\/?([-a-zA-Z0-9._\\+~#=]{1,256})([-a-zA-Z0-9@:%._\\+~#=]{1,256})([-a-zA-Z0-9()@:%_\\+.~#?&\\/\\/=]*)$"
    },
    "ClickableText": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "object",
          "properties": {
            "text": {
              "type": "string"
            },
            "link": {
              "$ref": "#/definitions/Link"
            }
          }
        }
      ]
    },
    "Image": {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "title": {
              "type": "string"
            },
            "url": {
              "type": "string"
            },
            "alt": {
              "type": "string"
            },
            "link": {
              "$ref": "#/definitions/Link"
            }
          },
          "required": [
            "url"
          ]
        },
        {
          "type": "string"
        }
      ]
    },
    "ContentBlock": {
      "type": "object",
      "properties": {
        "title": {
          "$ref": "#/definitions/ClickableText"
        },
        "subTitle": {
          "$ref": "#/definitions/ClickableText"
        },
        "h3": {
          "$ref": "#/definitions/ClickableText"
        },
        "h4": {
          "$ref": "#/definitions/ClickableText"
        },
        "h5": {
          "$ref": "#/definitions/ClickableText"
        },
        "h6": {
          "$ref": "#/definitions/ClickableText"
        },
        "footer": {
          "$ref": "#/definitions/ClickableText"
        },
        "images": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Image"
          }
        },
        "paragraphs": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ClickableText"
          },
          "additionalItems": false
        },
        "bgImage": {
          "$ref": "#/definitions/Image"
        },
        "namespace": {
          "type": "string"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "attributes": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        }

      },
      "additionalItems": false,
      "additionalProperties": false
    },
    "SectionBlock": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/ContentBlock"
      },
      "additionalItems": false,
      "additionalProperties": false
    }
  },
  "type": "array",
  "items": {
    "$ref": "#/definitions/ContentBlock"
  },
  "additionalItems": false,
  "additionalProperties": false
}